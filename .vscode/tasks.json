{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build theme",
      "type": "shell",
      "command": "bazel build //gravel-pit:all --strategy=CppCompile=standalone && cp ${workspaceFolder}/vscode_theme/bazel-bin/gravel-pit/*.json ${workspaceFolder}/vscode_theme/themes",
      "problemMatcher": [],
      "options": {
        "cwd": "vscode_theme"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish theme",
      "type": "shell",
      "command": "vsce publish minor",
      "problemMatcher": [],
      "options": {
        "cwd": "vscode_theme"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}